# This file provides an example of the environment variables needed by the auth-service.
# Copy this file to .env and fill in the values for your local development environment.

# -- Application Configuration --
# The port the HTTP server will listen on.
SERVER_PORT=8080

# -- PostgreSQL (Supabase) Database Configuration --
# The connection string for your Supabase database.
# You can find this in your Supabase project's Database settings.
DATABASE_URL="postgres://postgres:[YOUR-PASSWORD]@[YOUR-DB-HOST]:5432/postgres"

# -- RabbitMQ Configuration --
# The connection string for your RabbitMQ instance.
RABBITMQ_URL="amqp://guest:guest@localhost:5672/"

# -- Clerk Authentication Configuration --
# (Optional for this service, but good practice to have)
# The base URL for Clerk's JWKS (JSON Web Key Set) endpoint to validate JWTs.
# The API Gateway will handle validation, but the service might need it for direct testing.
# Example: https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json
CLERK_JWKS_URL=""

# Optional, but strongly recommended in production.
# If set, incoming JWT "aud" must match this value.
CLERK_AUDIENCE=""

# Optional, but strongly recommended in production.
# If set, incoming JWT "iss" must match this value.
CLERK_ISSUER=""

# Comma-separated list of allowed CORS origins.
# Example: https://app.transfa.com,https://admin.transfa.com
ALLOWED_ORIGINS=*

# Security fallback for local testing only.
# false -> require Authorization Bearer token.
# true  -> allow X-Clerk-User-Id header when token is missing.
ALLOW_INSECURE_HEADER_AUTH=false
